{
  "name": "python-api",
  "version": "1.0.0",
  "description": "Python API pipeline with FastAPI, testing, and containerized deployment",
  "category": "api",
  "author": "Pipeline Creator Team",
  "tags": ["python", "fastapi", "api", "backend", "docker"],
  "requirements": ["Python 3.9+", "Docker", "AWS Account"],
  "parameters": [
    {
      "name": "app_name",
      "type": "string",
      "description": "Application name for the Python API",
      "required": true,
      "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$"
    },
    {
      "name": "python_version",
      "type": "select",
      "description": "Python version to use",
      "default": "3.11",
      "required": false,
      "options": ["3.9", "3.10", "3.11", "3.12"]
    },
    {
      "name": "framework",
      "type": "select",
      "description": "Python web framework",
      "default": "fastapi",
      "required": false,
      "options": ["fastapi", "django", "flask"]
    },
    {
      "name": "test_coverage_threshold",
      "type": "integer",
      "description": "Minimum test coverage percentage required",
      "default": 85,
      "required": false,
      "min_value": 0,
      "max_value": 100
    },
    {
      "name": "enable_sonar",
      "type": "boolean",
      "description": "Enable SonarQube code quality analysis",
      "default": true,
      "required": false
    },
    {
      "name": "enable_security_scan",
      "type": "boolean",
      "description": "Enable security vulnerability scanning with Bandit",
      "default": true,
      "required": false
    },
    {
      "name": "container_port",
      "type": "integer",
      "description": "Container port for the API",
      "default": 8000,
      "required": false,
      "min_value": 1000,
      "max_value": 65535
    },
    {
      "name": "deployment_type",
      "type": "select",
      "description": "Deployment type",
      "default": "ecs-fargate",
      "required": false,
      "options": ["ecs-fargate", "lambda", "ec2"]
    }
  ]
}